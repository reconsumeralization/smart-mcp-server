{
  "name": "smart-mcp-server",
  "version": "1.0.0",
  "description": "Context-aware MCP server that intelligently manages tool presentation",
  "main": "src/archer/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/archer/server.js",
    "dev": "nodemon src/archer/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "docs": "jsdoc -c jsdoc.json",
    "db:setup": "node src/setup-database.js",
    "gemini:server": "node src/servers/gemini-server.js",
    "gemini:example": "node examples/gemini-example.js",
    "gemini-cli": "node gemini-cli.js",
    "token:generate": "node scripts/token-refresh.js generate",
    "token:refresh": "node scripts/token-refresh.js refresh",
    "token:validate": "node scripts/token-refresh.js validate",
    "token:info": "node scripts/token-refresh.js info",
    "token:export": "node scripts/token-refresh.js export",
    "token:help": "node scripts/token-refresh.js help",
    "run-all-phases": "node run-complete-implementation.js",
    "status": "node -e \"const ProjectManager = require('./src/lib/ProjectManager'); new ProjectManager().generateProgressReport().then(r => console.log(JSON.stringify(r, null, 2)))\"",
    "audit:gemini-creds": "node scripts/audit-gemini-credentials.js",
    "docs:inventory": "node scripts/markdown-inventory.js",
    "docs:hierarchy": "node scripts/generate-docs-hierarchy.js",
    "docs:navigation": "node scripts/generate-navigation.js",
    "docs:consolidate": "node scripts/consolidate-docs.js",
    "docs:pdf": "node scripts/export-docs.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "tools"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.55.1",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@octokit/rest": "^22.0.0",
    "bcrypt": "^5.1.0",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "fastify": "^4.27.2",
    "helmet": "^7.1.0",
    "joi": "^17.9.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "natural": "^6.10.4",
    "node-fetch": "^3.3.2",
    "openai": "^4.25.0",
    "pg": "^8.16.3",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "readline": "^1.3.0",
    "redis": "^4.6.13",
    "socket.io": "^4.7.0",
    "stripe": "^15.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.3",
    "pandoc": "^0.2.0",
    "prettier": "^3.6.2"
  }
}
